{
  "name": "automated_build",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "6.2.2"
  },
  "scripts": {
    "test": "browserify test/test.js -o test/bundle.js && mocha ./test/bundle.js",
    "rebuild": "[ ! -d node_modules/.bin ] && echo 'Building npm modules...\n' && npm rebuild",
    "checkNode": "echo '\nChecking Node version...\n' && (check-node-version --package --quiet)",
    "eslint": "echo '\nCheck js files' && eslint src/js/**/*.js",
    "bsync": "browser-sync start --config bs-config.js",
    "default": "npm run rebuild; npm run checkNode && npm run eslint && echo '\n\nBuild OK'"
  },
  "author": "Farhad hsni",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "browser-sync": "^2.13.0",
    "browserify": "^13.0.1",
    "chai": "^3.5.0",
    "check-node-version": "^1.1.1",
    "eslint": "^3.0.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.10.2",
    "eslint-plugin-jsx-a11y": "^1.5.5",
    "eslint-plugin-react": "^5.2.2",
    "karma": "^1.1.1",
    "karma-mocha": "^1.1.1",
    "mocha": "^2.5.3",
    "semver": "^5.2.0"
  }
}
