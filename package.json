{
  "name": "automated_build",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "6.2.2"
  },
  "scripts": {
    "prekarma": "echo '\nStarting karma server...\n'",
    "karma": "karma start",
    "test": "karma run",
    "k:stop": "karma stop",
    "babel": "browserify src/js/script.js -o src/js/bundle.js -t [ babelify --presets [ es2015 ] ]",
    "mocha": "mocha ./test/test.js",
    "rebuild": "[ ! -d node_modules/.bin ] && echo 'Building npm modules...\n' && npm rebuild",
    "precheckNode": "echo '\nChecking Node version...\n'",
    "checkNode": "check-node-version --package --quiet",
    "prelint": "echo '\nLinting JS files...'",
    "lint": "eslint src/js/script.js test/test.js",
    "eslint": "npm run lint -- --format 'node_modules/eslint-friendly-formatter'",
    "scss": "node-sass --watch src/scss/style.scss src/css/style.css --output-style expanded",
    "bsync": "browser-sync start --config bs-config.js",
    "servers": "npm run karma & npm run bsync & npm run scss &",
    "build": "npm run rebuild; npm run checkNode && npm run eslint && npm test && echo '\n\nBuild OK'"
  },
  "author": "Farhad hsni",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.3.7",
    "babel-cli": "^6.10.1",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.13.0",
    "browserify": "^13.0.1",
    "chai": "^3.5.0",
    "check-node-version": "^1.1.1",
    "eslint": "^3.0.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-friendly-formatter": "^2.0.6",
    "eslint-plugin-import": "^1.10.2",
    "eslint-plugin-jsx-a11y": "^1.5.5",
    "eslint-plugin-react": "^5.2.2",
    "karma": "^1.1.1",
    "karma-browserify": "^5.1.0",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.0.4",
    "mocha": "^2.5.3",
    "node-sass": "^3.8.0",
    "postcss-cli": "^2.5.2",
    "semver": "^5.2.0"
  }
}
